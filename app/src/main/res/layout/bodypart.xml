<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:contentDescription="@string/BodyPartImageBackdrop"
        android:src="@drawable/main_screen_backdrop"
        android:scaleType="centerCrop"
        android:id="@+id/exrecise_image" />

    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/grad"
        android:background="@drawable/gradient_body"></View>

    <TextView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="bottom"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/bodypart_name"
        android:textColor="#000" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_arrow_black_24dp"
        android:contentDescription="@string/Click_to_play"
        android:layout_gravity="center"
        android:background="@drawable/circleback"
        android:visibility="gone"
        android:id="@+id/play_but" />


</FrameLayout>